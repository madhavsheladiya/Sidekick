<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/homepage"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/btn_accomodation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Accomodation"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_nearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="Nearby"
            android:textAlignment="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="Part Time Jobs"
            android:textAlignment="center"
            android:id="@+id/btn_PartTime" />

        <Button
            android:id="@+id/btn_city_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="City Share"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_service_canada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="Service Canada"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_community_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="Community Center"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>