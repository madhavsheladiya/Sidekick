<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_bg"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/nearby_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_nearby_medical_stores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@drawable/input_bg"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Medical Store"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_nearby_restaurants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/input_bg"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Restaurants"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_nearby_groceries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="Groceries"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_nearby_attraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="Attraction"
            android:textAlignment="center" />
        <Button
            android:id="@+id/btn_nearby_service_canada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="Service Canada"
            android:textAlignment="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg"
            android:gravity="center"
            android:text="Service Ontario"
            android:textAlignment="center"
            android:id="@+id/btn_nearby_service_ontario" />

    </LinearLayout>
</LinearLayout>